<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/img_phototv"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:text="@string/img_tvshow"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/txt_nametv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_toEndOf="@+id/img_phototv"
        android:text="@string/name_tvshow"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/txt_descriptiontv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_nametv"
        android:layout_marginStart="26dp"
        android:layout_toRightOf="@id/img_phototv"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="@string/descriptiontv"/>

    <TextView
        android:id="@+id/txt_chacktv"
        android:layout_width="0dp"
        android:layout_height="0dp" />
</RelativeLayout>